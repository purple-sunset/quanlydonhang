<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/suong_mat_ong">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            style="@style/Tieu_de_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Thông tin khách hàng" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:visibility="visible">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <EditText

                    android:id="@+id/tmkh_ten_kh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"
                    ></EditText>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công ty:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <EditText

                    android:id="@+id/tmkh_ten_ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"
                    ></EditText>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên liên lạc:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_tieu_de"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere Str.57"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa Chỉ:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_dia_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere Str.57"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical">

                </EditText>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành Phố:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <EditText

                    android:id="@+id/tmkh_thanh_pho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere d"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"
                    ></EditText>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khu vực:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_vung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere Str.57"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quốc gia:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_quoc_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere Str.57"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_sdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere Str.57"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fax:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_fax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obere Str.57"
                    style="@style/thuong"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã bưu chính:"
                    style="@style/Tieu_de_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <EditText

                    android:id="@+id/tmkh_ma_buu_chinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/thuong"
                    android:text="0000"
                    android:layout_weight="10"
                    android:layout_gravity="center_vertical"/>
            </TableRow>
        </TableLayout>

    </ScrollView>

    <Button
        android:onClick="themKhachHang2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Thêm"
        style="@style/button"
        android:layout_gravity="center"
        android:layout_weight="50"
        android:drawableLeft="@drawable/add1" />


</LinearLayout>