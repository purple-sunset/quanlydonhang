<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nhom03.hust.quanlydonhang.activity.MainActivity"
    android:background="@color/suong_mat_ong">

    <TextView
        android:id="@+id/txt_xin_chao"
        android:text="@string/xin_chao"
        style="@style/Header"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textColor="#ff0004"
        />

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="200dp"
        android:layout_height="100dp"
        style="@style/Header"
        android:gravity="center"
        android:layout_toEndOf="@+id/txt_xin_chao"
        android:textColor="#ff0004"/>

    <Button
        android:id="@+id/btn_don_hang"
        android:text="@string/don_hang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txt_xin_chao"
        android:onClick="layDSDonHang"
        style="@style/button"
        />

    <Button
        android:id="@+id/btn_khach_hang"
        android:text="@string/khach_hang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_don_hang"
        android:onClick="layDSKhachHang"
        style="@style/button"
        />

    <Button
        android:id="@+id/btn_hang_hoa"
        android:text="@string/hang_hoa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_khach_hang"
        android:layout_marginTop="20dp"
        android:onClick="layDSHangHoa"
        style="@style/button"/>

    <Button
        android:text="Cập nhật CSDL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_hang_hoa"
        android:layout_marginTop="20dp"
        android:onClick="updateDB"
        style="@style/button"
        />


</RelativeLayout>
