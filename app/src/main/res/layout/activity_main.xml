<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/suong_mat_ong"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nhom03.hust.quanlydonhang.activity.MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/txt_xin_chao"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:gravity="center"
                android:text="@string/xin_chao"
                android:textColor="#ff0004" />

            <TextView
                android:text="Duc"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_user"
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_toEndOf="@+id/txt_xin_chao"
                android:gravity="center"
                android:textColor="#ff0004" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_don_hang"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/txt_xin_chao"
            android:onClick="layDSDonHang"
            android:text="@string/don_hang" />

        <Button
            android:id="@+id/btn_khach_hang"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/btn_don_hang"
            android:layout_marginTop="20dp"
            android:onClick="layDSKhachHang"
            android:text="@string/khach_hang" />

        <Button
            android:id="@+id/btn_hang_hoa"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/btn_khach_hang"
            android:layout_marginTop="20dp"
            android:onClick="layDSHangHoa"
            android:text="@string/hang_hoa" />



</LinearLayout>
