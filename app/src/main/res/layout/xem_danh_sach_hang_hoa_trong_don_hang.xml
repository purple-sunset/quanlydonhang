<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/suong_mat_ong">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Hàng hóa của đơn hàng"
            style="@style/Tieu_de_1"
            android:gravity="center"
            />
        <Button
            android:id="@+id/dshhdh_them"
            android:enabled="false"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            android:foreground="@drawable/add1"
            android:gravity="right"
            android:onClick="themHangHoa" />
    </android.support.v7.widget.Toolbar>>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tổng tiền: "
            style="@style/Tieu_de_2"
            android:layout_weight="2.66"
            />
        <TextView
            android:id="@+id/dshhdh_tong_tien"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="18.000"
            style="@style/thuong"/>


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_hang_hoa_cua_don_hang"
        android:listSelector="@drawable/list_selector">

    </ListView>

</LinearLayout>
